# Database Configuration (Supabase)
# Obtenha em: https://supabase.com
DATABASE_URL="postgres://user:password@host:5432/database?sslmode=require"

# Auth (OBRIGATÓRIO)
# CRÍTICO: Gere uma chave FORTE de no mínimo 32 caracteres
# Exemplo de geração: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
# OU: openssl rand -base64 32
# NUNCA use a chave de exemplo abaixo em produção!
JWT_SECRET="CHANGE-THIS-TO-A-RANDOM-SECRET-MIN-32-CHARS-GENERATED-SECURELY"

# Supabase Configuration (opcional)
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# AI Models - Escolha um ou mais providers

# OpenAI
# Obtenha em: https://platform.openai.com/api-keys
OPENAI_API_KEY="sk-..."

# Google Gemini (recomendado para produção)
# Obtenha em: https://aistudio.google.com/apikey
GOOGLE_GENERATIVE_AI_API_KEY="AIzaSy..."

# OpenRouter (opcional - acesso a múltiplos modelos)
# Obtenha em: https://openrouter.ai/
OPENROUTER_API_KEY="sk-or-v1-..."

# AI Gateway (para routing e fallback)
AI_GATEWAY_API_KEY="sk-***"

# Perplexity (para web search)
# Obtenha em: https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY="pplx-***"

# Portal da Transparência (opcional)
# Obtenha em: https://api.portaldatransparencia.gov.br/
# PORTAL_TRANSPARENCIA_API_KEY="sua-chave-aqui"

